<% content_for :title, "Armamentos" %>

<% unless notice.blank? %>
    <div class="info padding" >
        <p id="notice"><%= notice %></p>
    </div>
<% end %>

<h1>Armamentos</h1>

<table class="gt-table striped hovered">
  <thead>
    <tr>
      <th>Serial number</th>
      <th>Manufacturer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class="text-center">
    <% @armaments.each do |armament| %>
      <tr>
        <td><%= armament.serial_number %></td>
        <td><%= armament.manufacturer %></td>
        <td>
            <%= link_to 'Show', armament, :class => "action info" %>
            <%= link_to 'Edit', edit_armament_path(armament), :class => "action success" %>
            <%= link_to 'Destroy', armament, method: :delete, data: { confirm: 'Are you sure?' }, :class => "action danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Armament', new_armament_path, :class => "action info" %>
