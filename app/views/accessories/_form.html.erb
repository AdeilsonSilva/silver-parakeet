<%= form_with(model: accessory, :html => {:class => "gt-form off-xs-3 xs-6"},  local: true) do |form| %>
  <%= form_errors_for form.object %>

  <%= form.label :description %>
  <%= form.text_field :description, id: :accessory_description %>

  <div class="actions">
      <%= link_to 'Voltar', accessories_path, :class => "btn" %>
      <%= form.submit 'Enviar', :class => "btn success" %>
  </div>
<% end %>
