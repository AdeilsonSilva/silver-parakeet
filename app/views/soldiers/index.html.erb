<% unless notice.blank? %>
    <div class="info padding" >
        <p id="notice"><%= notice %></p>
    </div>
<% end %>

<h1>Soldiers</h1>

<table class="gt-table striped hovered">
  <thead>
    <tr>
      <th>Graduation</th>
      <th>War name</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class="text-center">
    <% @soldiers.each do |soldier| %>
      <tr>
        <td><%= soldier.graduation %></td>
        <td><%= soldier.war_name %></td>
        <td><%= soldier.user %></td>
        <td><%= link_to 'Show', soldier %></td>
        <td><%= link_to 'Edit', edit_soldier_path(soldier) %></td>
        <td><%= link_to 'Destroy', soldier, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Soldier', new_soldier_path %>
