<% unless notice.blank? %>
    <div class="info padding" >
        <p id="notice"><%= notice %></p>
    </div>
<% end %>

<h1>Reserves</h1>

<table class="gt-table striped hovered">
  <thead>
    <tr>
      <th>Initials</th>
      <th>Description</th>
      <th>Material reserve</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class="text-center">
    <% @reserves.each do |reserf| %>
      <tr>
        <td><%= reserf.initials %></td>
        <td><%= reserf.description %></td>
        <td><%= reserf.material_reserve %></td>
        <td><%= link_to 'Show', reserf %></td>
        <td><%= link_to 'Edit', edit_reserf_path(reserf) %></td>
        <td><%= link_to 'Destroy', reserf, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

